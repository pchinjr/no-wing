{
  "tasks": {
    "start": "deno run --allow-read=$NO_WING_STATE_DIR,$AWS_CREDENTIALS_PATH --allow-write=$NO_WING_STATE_DIR --allow-env=AWS_PROFILE,AWS_REGION,GIT_AUTHOR_NAME,GIT_AUTHOR_EMAIL,NO_WING_STATE_DIR,AWS_CREDENTIALS_PATH --allow-net=$AWS_ENDPOINTS main.ts",
    "test": "deno test --allow-read=$NO_WING_STATE_DIR,$AWS_CREDENTIALS_PATH --allow-write=$NO_WING_STATE_DIR --allow-env=AWS_PROFILE,AWS_REGION,GIT_AUTHOR_NAME,GIT_AUTHOR_EMAIL,NO_WING_STATE_DIR,AWS_CREDENTIALS_PATH --allow-net=$AWS_ENDPOINTS --allow-temp",
    "test:watch": "deno test --watch --allow-read=$NO_WING_STATE_DIR,$AWS_CREDENTIALS_PATH --allow-write=$NO_WING_STATE_DIR --allow-env=AWS_PROFILE,AWS_REGION,GIT_AUTHOR_NAME,GIT_AUTHOR_EMAIL,NO_WING_STATE_DIR,AWS_CREDENTIALS_PATH --allow-net=$AWS_ENDPOINTS --allow-temp",
    "test:coverage": "deno test --coverage=coverage --allow-read=$NO_WING_STATE_DIR,$AWS_CREDENTIALS_PATH --allow-write=$NO_WING_STATE_DIR --allow-env=AWS_PROFILE,AWS_REGION,GIT_AUTHOR_NAME,GIT_AUTHOR_EMAIL,NO_WING_STATE_DIR,AWS_CREDENTIALS_PATH --allow-net=$AWS_ENDPOINTS --allow-temp && deno coverage coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check main.ts"
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "rules": {
      "include": ["recommended", "ban-untagged-todo"]
    }
  },
  "compilerOptions": {
    "strict": true
  }
}
