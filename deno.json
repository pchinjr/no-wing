{
  "tasks": {
    "start": "deno run --allow-read --allow-write --allow-env --allow-net main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --allow-temp",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-env --allow-net --allow-temp",
    "test:coverage": "deno test --coverage=coverage --allow-read --allow-write --allow-env --allow-net --allow-temp && deno coverage coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check main.ts"
  },
  "fmt": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "rules": {
      "include": ["recommended", "ban-untagged-todo"]
    }
  },
  "compilerOptions": {
    "strict": true
  }
}
