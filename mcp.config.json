{
  "tools": [
    {
      "name": "noWingValidate",
      "description": "Validates LLM output against a developer's intent.yml and returns constraint results.",
      "entrypoint": "./tools/validate.ts",
      "inputSchema": {
        "type": "object",
        "properties": {
          "intentPath": {
            "type": "string",
            "default": "intent.yml",
            "description": "Path to the YAML intent file."
          },
          "outputPath": {
            "type": "string",
            "default": "workspace/output.ts",
            "description": "Path to the LLM output file to validate."
          }
        },
        "required": []
      },
      "annotations": ["safe", "alignment", "observability"]
    },
    {
      "name": "noWingCommit",
      "description": "Signs and commits agent-authored code under the agentâ€™s identity.",
      "entrypoint": "./tools/commit.ts",
      "inputSchema": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string",
            "description": "Path to the file to commit."
          },
          "agentName": {
            "type": "string",
            "description": "Git author name for the agent."
          }
        },
        "required": ["filePath", "agentName"]
      },
      "annotations": ["commit", "traceability"]
    },
    {
      "name": "fs_write",
      "url": "http://localhost:7654", // or whatever port you use
      "description": "Safely write files within workspace/",
      "input_schema": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["path", "content"]
      }
    }
  ]
}
